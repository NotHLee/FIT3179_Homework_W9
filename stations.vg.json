{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "projection": {
        "type": "equalEarth",
        "center": [109, 4],
        "scale": 2500
    },
    "layer": [
        {
            "data": {
                "sphere": true
            },
            "mark": {
                "type": "geoshape",
                "fill": "#cbe5fc",
                "stroke": null
            }
        },
        {
            "data": {
                "graticule": {
                    "step": [2, 2]
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "white",
                "strokeWidth": 1,
                "opacity": 0.7
            }
        },
        {
            "data": {
                "url": "geoBoundaries-MYS-ADM1.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "MYSADM1gbOpen"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "malaysia_aqi.csv"
            },
            "mark": {
                "type": "circle",
                "size": 100,
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "lon",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "lat",
                    "type": "quantitative"
                },
                "color": {
                    "field": "aqi",
                    "title": "Air Quality Index (AQI)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "viridis"
                    }
                },
                "tooltip": [
                    {
                        "field": "station_location",
                        "type": "nominal",
                        "title": "Location"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    },
                    {
                        "field": "lat",
                        "type": "quantitative",
                        "title": "Latitude"
                    },
                    {
                        "field": "lon",
                        "type": "quantitative",
                        "title": "Longitude"
                    }
                ]
            }
        }
    ]
}