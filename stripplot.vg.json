{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_Homework_W9/refs/heads/main/malaysia_aqi.csv",
        "format": {
            "type": "csv",
            "parse": {
                "aqi": "number",
                "lat": "number",
                "lon": "number"
            }
        }
    },
    "params": [
        {
            "name": "min_aqi",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 130,
                "step": 1,
                "name": "Minimum AQI: "
            }
        }
    ],
    "transform": [
        {
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "aqi", "order": "descending"}]
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "circle",
                "size": 100,
                "opacity": 0.7
            },
            "transform": [
                {
                    "filter": "datum.aqi >= min_aqi"
                }
            ],
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State",
                    "sort": "ascending",
                    "scale": {
                        "domain": ["Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Perak", "Perlis", "Pulau Pinang", "Sabah", "Sarawak", "Selangor", "Terengganu", "Wilayah Persekutuan"]
                    }
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative",
                    "title": "Air Quality Index (AQI)",
                    "scale": {
                        "domain": [0, 140]
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State",
                    "scale": {
                        "domain": ["Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Perak", "Perlis", "Pulau Pinang", "Sabah", "Sarawak", "Selangor", "Terengganu", "Wilayah Persekutuan"]
                    }
                },
                "tooltip": [
                    {
                        "field": "station_location",
                        "type": "nominal",
                        "title": "Station"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.rank <= 5 && datum.aqi >= min_aqi"
                },
                {
                    "calculate": "datum.station_location",
                    "as": "label_text"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 8,
                "dy": 0,
                "fontSize": 11,
                "fontWeight": "bold"
            },
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "sort": "ascending"
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative"
                },
                "text": {
                    "field": "label_text",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}