{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "data": {
        "url": "malaysia_aqi.csv"
    },
    "layer": [
        {
            "mark": {
                "type": "circle",
                "size": 100,
                "opacity": 0.7
            },
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State",
                    "sort": "ascending"
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative",
                    "title": "Air Quality Index (AQI)",
                    "scale": {
                        "domain": [0, 130]
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State"
                },
                "tooltip": [
                    {
                        "field": "station_location",
                        "type": "nominal",
                        "title": "Station"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "window": [{"op": "rank", "as": "rank"}],
                    "sort": [{"field": "aqi", "order": "descending"}]
                },
                {
                    "filter": "datum.rank >= 62"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 8,
                "dy": 0,
                "fontSize": 11,
                "fontWeight": "bold"
            },
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "sort": "ascending"
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative"
                },
                "text": {
                    "field": "station_location",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}