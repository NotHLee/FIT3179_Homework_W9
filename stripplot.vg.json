{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/NotHLee/FIT3179_Homework_W9/refs/heads/main/malaysia_aqi.csv",
        "format": {
            "type": "csv",
            "parse": {
                "aqi": "number",
                "lat": "number",
                "lon": "number"
            }
        }
    },
    "transform": [
        {
            "window": [{"op": "rank", "as": "rank"}],
            "sort": [{"field": "aqi", "order": "descending"}]
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "circle",
                "size": 100,
                "opacity": 0.7
            },
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State",
                    "sort": "ascending"
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative",
                    "title": "Air Quality Index (AQI)",
                    "scale": {
                        "domain": [0, 140]
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "title": "State"
                },
                "tooltip": [
                    {
                        "field": "station_location",
                        "type": "nominal",
                        "title": "Station"
                    },
                    {
                        "field": "state",
                        "type": "nominal",
                        "title": "State"
                    },
                    {
                        "field": "aqi",
                        "type": "quantitative",
                        "title": "AQI"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.rank <= 5"
                },
                {
                    "calculate": "datum.station_location",
                    "as": "label_text"
                }
            ],
            "mark": {
                "type": "text",
                "align": "left",
                "dx": 8,
                "dy": 0,
                "fontSize": 11,
                "fontWeight": "bold"
            },
            "encoding": {
                "y": {
                    "field": "state",
                    "type": "nominal",
                    "sort": "ascending"
                },
                "x": {
                    "field": "aqi",
                    "type": "quantitative"
                },
                "text": {
                    "field": "label_text",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                }
            }
        }
    ]
}